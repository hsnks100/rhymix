<?xml version="1.0" encoding="UTF-8"?>
<skin version="0.2">
    <title xml:lang="ko">출석부 소시랑 스킨</title>
    <description xml:lang="ko">
        출석부 소시랑 스킨
        제작: 매실茶(http://maesiltea.linuxstudy.pe.kr)
		제작: 소시랑(http://www.sosirang.com)
    </description>
    <version>0.1</version>
    <date>2011-11-17</date>

    <author email_address="pppljh@gmail.com" link="http://maesiltea.linuxstudy.pe.kr">
        <name xml:lang="ko">매실茶</name>
    </author>
	<author email_address="master@sosirang.com" link="http://www.sosirang.com">
        <name xml:lang="ko">소시랑</name>
    </author>

    <license>BSD/LGPL2 Dual</license>

    <extra_vars>
        <var name="display_setup_button" type="select">
            <title xml:lang="ko">설정 표시</title>
            <options value="Y">
                <title xml:lang="ko">출력</title>
            </options>
            <options value="N">
                <title xml:lang="ko">출력하지 않음</title>
            </options>
            <description />
        </var>
		
		<var name="maxlength" type="text" default="30">
            <title xml:lang="ko">인사말 입력 글자수</title>
            <description xml:lang="ko">인사말의 입력 글자수를 지정할 수 있습니다. (기본 : 30)</description>
        </var>
		
		<var name="greetings_cut_size" type="text">
            <title xml:lang="ko">인사말 글자수</title>
            <title xml:lang="jp">length of greetings characters</title>
            <title xml:lang="zh-CN">length of greetings characters</title>
            <title xml:lang="en">Length of greetings</title>
            <title xml:lang="es">Length of greetings</title>
            <title xml:lang="zh-TW">Length of greetings</title>
            <description xml:lang="ko">인사말의 글자수를 지정할 수 있습니다. (기본 : 30)</description>
            <description xml:lang="jp">You may set length of greetings. (default : 30)</description>
            <description xml:lang="zh-CN">You may set length of greetings. (default : 30)</description>
            <description xml:lang="en">You may set length of greetings. (default : 30)</description>
            <description xml:lang="es">You may set length of greetings. (default : 30)</description>
            <description xml:lang="zh-TW">You may set length of greetings. (default : 30)</description>
        </var>
		
		<var name="display_ip_address" type="select">
            <title xml:lang="ko">아이피주소 표시</title>
            <title xml:lang="en">Display ip address</title>
            <title xml:lang="jp">IPアドレス表示</title>
            <title xml:lang="zh-CN">显示IP地址</title>
            <title xml:lang="es-CN">Display ip address</title>
            <title xml:lang="zh-TW">顯示IP位址</title>
            <options value="Y">
                <title xml:lang="ko">출력</title>
                <title xml:lang="en">display</title>
                <title xml:lang="jp">表示</title>
                <title xml:lang="zh-CN">显示</title>
                <title xml:lang="es">display</title>
                <title xml:lang="zh-TW">顯示</title>
            </options>
            <options value="N">
                <title xml:lang="ko">출력하지 않음</title>
                <title xml:lang="en">not display</title>
                <title xml:lang="jp">非表示</title>
                <title xml:lang="zh-CN">不显示</title>
                <title xml:lang="es">not display</title>
                <title xml:lang="zh-TW">隱藏</title>
            </options>
        </var>
		
		<var name="calendar" type="select">
            <title xml:lang="ko">달력 표시</title>
            <options value="Y">
                <title xml:lang="ko">출력</title>
            </options>
            <options value="N">
                <title xml:lang="ko">숨김</title>
            </options>
			<description xml:lang="ko">숨김하실때 날짜선택시 달력이 출력됩니다</description>
        </var>
		
		
    </extra_vars>
</skin>
